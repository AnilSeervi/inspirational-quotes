{
	"compilerOptions": {
		"target": "ESNext",
		"moduleResolution": "Node",
		"declaration": true,
		"removeComments": false,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"strict": true,
		"noImplicitAny": true,
		"rootDir": ".",
		"allowJs": false,
		"noEmitOnError": true,
		"outDir": "./dist"
	},
	"include": ["src", "tests", "tsup.config.ts"],
	"exclude": ["node_modules", "/dist", "/assets"]
}
